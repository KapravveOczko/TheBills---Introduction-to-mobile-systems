<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Register">

    <TextView
        android:id="@+id/textHeader"
        tools:ignore="HardcodedText,MissingConstraints"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register:"
        android:textAlignment="center"
        android:layout_margin="80dp"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="91dp"
        android:contentDescription="Register Header"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textFieldEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginTop="6dp"
        android:hint="email"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textHeader"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        android:contentDescription="Email Input"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textFieldPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginTop="6dp"
        android:hint="password"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textFieldEmail"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        android:contentDescription="Password Input"/>

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="204dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:text="REGISTER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFieldPassword"
        android:contentDescription="Register Button"/>

    <TextView
        android:id="@+id/textRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="already have an account?"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegister"
        app:layout_constraintVertical_bias="0.075"
        tools:ignore="MissingConstraints"
        android:contentDescription="Already have an account? text"/>

</androidx.constraintlayout.widget.ConstraintLayout>
