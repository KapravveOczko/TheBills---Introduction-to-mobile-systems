<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Room">

    <TextView
        android:id="@+id/RoomName"
        android:layout_width="wrap_content"
        android:text="Name"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Room Name"/>

    <Button
        android:id="@+id/buttonLeaveRoom"
        android:layout_width="176dp"
        android:layout_height="66dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:text="leave room"
        android:backgroundTint="@color/theBillsDeleteColor"
        app:layout_constraintEnd_toStartOf="@+id/buttonShowBills"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RoomName"
        android:contentDescription="Leave Room Button"/>

    <Button
        android:id="@+id/buttonShowBills"
        android:layout_width="176dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="32dp"
        android:text="show bills"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonLeaveRoom"
        app:layout_constraintTop_toBottomOf="@+id/RoomName"
        android:contentDescription="Show Bills Button"/>

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="131dp"
        android:layout_marginTop="278dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="275dp"
        android:text="there will be a summary"
        android:textSize="16dp"
        android:textColor="@color/theBillsColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLeaveRoom"
        tools:ignore="MissingConstraints"
        android:contentDescription="Room Summary"/>
</androidx.constraintlayout.widget.ConstraintLayout>
